<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SetLineupActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <GridLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="6"
        android:layout_marginTop="80dp"
        android:layout_marginStart="40dp"
        android:layout_gravity="left|top">
        <TextView
            android:id="@+id/set_lineup_lw_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:fontFamily="@font/graduate"
            android:text="LW"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="34dp"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:id="@+id/set_lineup_c_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:fontFamily="@font/graduate"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="34dp"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="1"
            />

        <TextView
            android:id="@+id/set_lineup_rw_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:fontFamily="@font/graduate"
            android:text="RW"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="34dp"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="2"
            />

        <TextView
            android:id="@+id/set_lineup_leftd_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:fontFamily="@font/graduate"
            android:text="LD"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="34dp"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="3"
            />

        <TextView
            android:id="@+id/set_lineup_rightd_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:fontFamily="@font/graduate"
            android:text="RD"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="34dp"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="4"
            />
        <TextView
            android:id="@+id/set_lineup_goalie_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:fontFamily="@font/graduate"
            android:text="G"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="34dp"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="5"
            />
        <Spinner
            android:id="@+id/set_lineup_lw_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_row="0"
            android:layout_column="1"
            />
        <Spinner
            android:id="@+id/set_lineup_c_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_row="1"
            android:layout_column="1"
            />
        <Spinner
            android:id="@+id/set_lineup_rw_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_row="2"
            android:layout_column="1"
            />
        <Spinner
            android:id="@+id/set_lineup_leftd_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_row="3"
            android:layout_column="1"
            />
        <Spinner
            android:id="@+id/set_lineup_rightd_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_row="4"
            android:layout_column="1"
            />
        <Spinner
            android:id="@+id/set_lineup_goalie_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_row="5"
            android:layout_column="1"
            />

    </GridLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/start_game_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:onClick="onSetLineupNextBtn"
        app:srcCompat="@android:drawable/ic_media_play" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>